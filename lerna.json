{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "create": {
      "license": "MIT",
      "repository": {
        "type": "git",
        "url": "git+https://github.com/xyuanbuilds/yirga.git"
      },
      "scripts": {
        "clean": "tsc -b tsconfig.build.json --clean"
      }
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    },
    "publish": {
      "ignoreChanges": [
        "**/CHANGELOG.md",
        "**/node_modules/**",
        "**/*.md",
        "**/*.spec.*",
        "**/*.stories.*",
        "**/__tests__/**"
      ],
      "conventionalCommits": true,
      "registry": "https://registry.npmjs.org"
    }
  }
}
